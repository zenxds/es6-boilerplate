{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "allowJs": true,
    "sourceMap": false,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "helpers/*": ["./src/helpers/*"]
    }
  },
  "files": [],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
